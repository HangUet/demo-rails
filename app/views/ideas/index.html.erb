<h1 style="text-align: center">Listing ideas</h1>

<% @ideas.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="col-md-4">
        <div class="card h-100">
          <%= image_tag idea.picture_url, class:"card-img-top" if idea.picture.present?%>
          <div class="card-body">
            <h4 style="text-align: center"><%= link_to idea.name, idea %></h4>
            <%= idea.description %>
          </div>
      </div> 
      </div>
    <% end %>
    
  </div>
<% end %>

